version: "3.5"
services:
{{range .Pollers}}
  {{ .PollerName }}:
    image: harvest:latest
    container_name: harvest_{{ .PollerName }}
    restart: always
    {{if .Port }}
    ports:
      - "{{ .Port }}:{{ .Port }}"
    {{end}}
    stdin_open: true # docker run -i
    tty: true        # docker run -t
    command: ' --poller {{ .PollerName }} --loglevel {{ .LogLevel }} {{if .Port }} --promPort {{ .Port }} {{ end }} --config /opt/harvest.yml'
    #entrypoint: ["sh", "-c", "sleep 2073600"]
    volumes:
      - harvest:/opt/harvest/
      - type: bind
        source: {{ .ConfigFile }}
        target: /opt/harvest.yml
{{end}}
volumes:
  harvest: